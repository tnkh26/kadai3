<table class='table table-hover'>
  <thead>
    <tr>
      <th><%#空白%></th>
      <th>Title</th>
      <th>Option</th>
      <th colspan='3'></th>
    </tr>
  </thead>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td>
         <% if @user.profile_image.attached? %>
           <%= image_tag @user.prpfile_image("50x50") %>
         <% else %>
           <%= image_tag 'no_image', size: "50x50" %>
         <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>  
</table>