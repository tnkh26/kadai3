<table class='table'>
  <thead>
    <tr>
      
      <th>
        image
      </th>
      
      <th>
        name
      </th>
      
      <th colspan="3"></th>
        
    </tr>
  </thead>
  
  <tbady>
    <% users.each do |user| %>
    <tr>
      
      <td>
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.prpfile_image("50x50") %>
        <% else %>
          <%= image_tag 'no_image', size: "50x50" %>
        <% end %>
      </td>
      
      <td>
        <%= user.name %>
      </td>
      
      <td>
        <%= link_to 'Show', user_path(user)%>
      </td>
      
    <% end %>
    </tr>
  </tbady>
</table>